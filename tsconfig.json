{
  "compilerOptions": {
    "target": "ESNext",                       
    "module": "ESNext",                     
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
        "@/*": ["*"],
        "@constants/*": ["constants/*"],
        "@pom/*": ["pom/*"],
        "@utils/*": ["utils/*"],
        "@fixtures/*": ["fixtures/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./src"              
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}